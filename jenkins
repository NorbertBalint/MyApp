pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Docker build') {
          steps {
            echo "Build docker on ..."
            script {
              docker.build("android-dev:latest")
            }
          }
        }

        stage('Build APK') {
        agent {
                docker {
                  image "${env.DOCKER_IMAGE}:${env.DOCKER_VERSION}"
                  args "-v ${env.DOCKER_IMAGE}-gradle-cache:/workspace/.gradle -e GRADLE_USER_HOME=/workspace/.gradle"
                  reuseNode true
                }
        }

            steps {
                sh './gradlew assembleDebug'
            }
        }

        stage('Archive APK') {
            steps {
                archiveArtifacts artifacts: '**/app-debug.apk', fingerprint: true
            }
        }
    }
}
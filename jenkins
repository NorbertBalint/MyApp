pipeline {
    agent any

        stages {
            stage('Check Docker Version') {
                steps {
                    sh 'docker version'
                }
            }

            stage('Build APK') {
                        steps {
                            sh 'chmod +x ./gradlew'
                            sh './gradlew clean assembleDebug'
                        }
                    }
                    stage('Archive APK') {
                        steps {
                            archiveArtifacts artifacts: '**/*.apk', fingerprint: true
                        }
                    }
        }
}

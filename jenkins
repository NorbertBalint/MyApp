pipeline {
    agent any
    stages {
        stage('Docker build') {
            steps {
                echo "Build docker on ${WORKSPACE}..."
                script { docker.build("myandroid:latest") }
            }
        }

        stage('Build') {
            agent { docker {
                        image 'myandroid'
                        args "-v myandroid-gradle-cache:/workspace/.gradle -e GRADLE_USER_HOME=/workspace/.gradle"
                        reuseNode true } }
            steps {
                sh 'chmod +x ./gradlew'
                sh './gradlew clean assembleDebug'
            }
        }
    }
}
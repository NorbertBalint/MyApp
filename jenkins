pipeline {
    agent any
    stages {
        stage('Docker build') {
            steps {
                echo "Build docker on ${WORKSPACE}..."
                script { docker.build("android:latest") }
            }
        }

        stage('Build') {
            agent { docker {
                        image 'android'
                        reuseNode true } }
            steps {
                sh 'chmod +x ./gradlew'
                sh './gradlew clean assembleDebug'
            }
        }
    }
}
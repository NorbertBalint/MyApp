pipeline {
    agent any

options {
    skipDefaultCheckout(true)
  }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Docker build') {
          steps {
            echo "Build docker on ..."
            script {
              docker.build("android")
            }
          }
        }

        stage('Build APK') {
            agent {
                docker {
                  image "android"
                  args "-v android-gradle-cache:/workspace/.gradle -e GRADLE_USER_HOME=/workspace/.gradle"
                  reuseNode true
                }
            }

            steps {
                sh './gradlew assembleDebug'
            }
        }

        stage('Archive APK') {
            steps {
                archiveArtifacts artifacts: '**/app-debug.apk', fingerprint: true
            }
        }
    }
}
pipeline {
    agent any

options {
    skipDefaultCheckout(true)
  }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build APK') {
            agent {
                docker {
                  image "myjenkins-blueocean:2.528.3-1"
                  args "-v myjenkins-blueocean:2.528.3-1-gradle-cache:/workspace/.gradle -e GRADLE_USER_HOME=/workspace/.gradle"
                  reuseNode true
                }
            }

            steps {
                sh './gradlew assembleDebug'
            }
        }

        stage('Archive APK') {
            steps {
                archiveArtifacts artifacts: '**/app-debug.apk', fingerprint: true
            }
        }
    }
}
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Docker build') {
          steps {
            echo "Build docker on ..."
            script {
              docker.build("android-dev:latest")
            }
          }
        }

        stage('Build APK') {
            steps {
                sh './gradlew assembleDebug'
            }
        }

        stage('Archive APK') {
            steps {
                archiveArtifacts artifacts: '**/app-debug.apk', fingerprint: true
            }
        }
    }
}